#include<stdio.h>
#define max 20
int main()
{
	int n;
	int arr[max],even[max],odd[max],e=0,o=0;
	printf("how many element do you want in array");
	scanf("%d",&n);
	printf("enter elements ");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	printf(" elements are\n");
	for(int i=0;i<n;i++)
	{
		if(arr[i]%2==0)
		{
			even[e]=arr[i];
			e++;
		}
		else
		{
			odd[o]=arr[i];
			o++;
			
		}
	}
	for(int i=0;i<e;i++)
	{
		printf("%d\t",even[i]);
	}
	printf("\n");
	for(int i=0;i<o;i++)
	{
		printf("%d\t",odd[i]);
	}
	printf("even count= %d and odd count is =%d",e,o);
	
	
	
	
	
	return 0;
}
