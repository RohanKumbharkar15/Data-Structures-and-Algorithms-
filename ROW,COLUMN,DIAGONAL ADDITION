#include<stdio.h>
int main()
{
	int m[3][3];
	int i,j;
	
	int r1=0,r2=0,r3=0,c1=0,c2=0,c3=0,d=0;
	printf("\nenter elemtn in m");
	for(int i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			scanf("%d",&m[i][j]);
		}
	}
	printf("\n---- matrix ------\n");
	for(int i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("%5d",m[i][j]);
		}
		printf("\n");
	}
	
	// row 1 addition
	
	for(int i=0;i<=0;i++)
	{
		for(int j=0;j<3;j++)
		{
			r1=r1+m[i][j];
		}
	}
	printf("\nrow 1=%d",r1);
	
	// ROW 2
	for(int i=1;i<=1;i++)
	{
		for(int j=0;j<3;j++)
		{
			r2=r2+m[i][j];
		}
	}
	printf("\nrow 2=%d",r2);	
	
	// row 3
		for(int i=2;i<=2;i++)
	{
		for(int j=0;j<3;j++)
		{
			r3=r3+m[i][j];
		}
	}
	printf("\nrow 1=%d",r3);
	
	// coloumn 1
	for(int i=0;i<3;i++)
	{
		for(int j=0;j<=0;j++)
		{
			c1=c1+m[i][j];
		}
	}
	printf("\ncolumn 1=%d",c1);
	
	
	// coloumn 2
	for(int i=0;i<3;i++)
	{
		for(int j=1;j<=1;j++)
		{
			c2=c2+m[i][j];
		}
	}
	printf("\ncolumn 2=%d",c2);
	
	// coloumn 3
	for(int i=0;i<3;i++)
	{
		for(int j=2;j<=2;j++)
		{
			c3=c3+m[i][j];
		}
	}
	printf("\ncolumn 3=%d",c3);
	
	// diagonal
	
	
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++)
			{
				if(i==j)
				{
				
				d=d+m[i][j];
				}
			}
		}
		
	
	printf("\nd=%d",d);
	
	return 0;
}
